@model MultipleChoicExam.Models.UserAccount

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center">Login Services</h2>
    <form asp-action="Login" asp-controller="Home" class="mt-4">
        <div class="mb-3 mt-3">
            @Html.LabelFor(m => m.UserName, new { @class = "form-label me-2" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(mbox => mbox.UserName, null, new { @class = "text-danger" })
        </div>
        <div class="mb-3 mt-3">
            @Html.LabelFor(m => m.Password, new { @class = "form-label me-2" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(mbox=> mbox.Password,null, new {@class = "text-danger"})
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-success">Đăng nhập</button>
        </div>
    </form>
</div>