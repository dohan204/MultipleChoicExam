@model MultipleChoicExam.Models.AddSubject

@{
    int i
            = 1;
}
<div class="container mt-2">
    <h3 class="text-center">Thông tin môn thi</h3>
</div>
<div class="d-flex align-items-center mb-3 mt-2">
    <a asp-controller="ManageUser" asp-action="AddSubject" class="btn btn-outline-info">Thêm </a>
    <!-- Search ở cuối -->
    <form class="d-flex ms-auto" asp-controller="ManageUser" asp-action="SearByName" method="post">
        <input type="text" asp-for="Subject.SubjectName" class="form-control" placeholder="Search Name">
        <button class="btn btn-primary me-2">Search</button>
    </form>
</div>
<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã Môn</th>
                    <th>Tên Môn</th>
                    <th>Mô tả</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.ListSubject)
                {
                    <tr>
                        <td>
                           @i
                        </td>
                        <td><a asp-controller="ManageUser" asp-action="EditSubject" asp-route-subId="@item.SubjectId" class="btn btn-success">Sửa</a>
                            <a asp-controller="ManageUser" asp-action="DeleteSubject" asp-route-subId="@item.SubjectId" class="btn btn-success">Xóa</a>
                            @item.SubjectId </td>
                        <td>@item.SubjectName</td>
                        <td>@item.Description</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>